#set($now = $util.time.nowISO8601())

{
  "version": "2017-02-28",
  "operation": "UpdateItem",
  "key": {
    "productId": $util.dynamodb.toDynamoDBJson($ctx.args.id)
  },
  "update": {
    "expression": "SET approval_status = :rejected, updated_at = :now",
    "expressionValues": {
      ":rejected": $util.dynamodb.toDynamoDBJson("rejected"),
      ":now": $util.dynamodb.toDynamoDBJson($now)
    }
  }
}
