{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "S3FullAccessForKYC",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:PutObjectAcl",
        "s3:GetObjectAcl",
        "s3:ListBucket",
        "s3:GetBucketLocation",
        "s3:GetBucketVersioning",
        "s3:ListBucketVersions"
      ],
      "Resource": [
        "arn:aws:s3:::beauzead-kyc-documents",
        "arn:aws:s3:::beauzead-kyc-documents/*"
      ]
    },
    {
      "Sid": "DynamoDBFullAccessForKYC",
      "Effect": "Allow",
      "Action": [
        "dynamodb:PutItem",
        "dynamodb:GetItem",
        "dynamodb:UpdateItem",
        "dynamodb:DeleteItem",
        "dynamodb:Query",
        "dynamodb:Scan",
        "dynamodb:BatchGetItem",
        "dynamodb:BatchWriteItem"
      ],
      "Resource": [
        "arn:aws:dynamodb:us-east-1:*:table/seller_kyc",
        "arn:aws:dynamodb:us-east-1:*:table/seller_kyc/index/*"
      ]
    },
    {
      "Sid": "S3SignedURLAccess",
      "Effect": "Allow",
      "Action": [
        "s3:GetSignedUrl"
      ],
      "Resource": "arn:aws:s3:::beauzead-kyc-documents/*"
    }
  ]
}
