{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Lambda function for Cognito post-confirmation trigger",
  "Parameters": {
    "env": {
      "Type": "String"
    },
    "deploymentBucketName": {
      "Type": "String"
    },
    "s3Key": {
      "Type": "String"
    },
    "userPoolId": {
      "Type": "String",
      "Default": "us-east-1_PPPmNH7HL"
    }
  },
  "Conditions": {
    "ShouldNotCreateEnvResources": {
      "Fn::Equals": [
        {
          "Ref": "env"
        },
        "NONE"
      ]
    }
  },
  "Resources": {
    "BeauzeadPostConfirmationRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "lambda.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "ManagedPolicyArns": [
          "arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole"
        ],
        "Policies": [
          {
            "PolicyName": "CognitoPolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "cognito-idp:AdminAddUserToGroup"
                  ],
                  "Resource": {
                    "Fn::Sub": "arn:aws:cognito-idp:${AWS::Region}:${AWS::AccountId}:userpool/${userPoolId}"
                  }
                }
              ]
            }
          }
        ]
      }
    },
    "BeauzeadPostConfirmationFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "FunctionName": {
          "Fn::If": [
            "ShouldNotCreateEnvResources",
            "BeauzeadPostConfirmation",
            {
              "Fn::Sub": "BeauzeadPostConfirmation-${env}"
            }
          ]
        },
        "Description": "Post-confirmation Lambda trigger for Cognito user pool",
        "Runtime": "nodejs18.x",
        "Handler": "src/index.handler",
        "Role": {
          "Fn::GetAtt": [
            "BeauzeadPostConfirmationRole",
            "Arn"
          ]
        },
        "Timeout": 60,
        "MemorySize": 256,
        "Environment": {
          "Variables": {
            "USER_POOL_ID": {
              "Ref": "userPoolId"
            },
            "AWS_REGION": {
              "Ref": "AWS::Region"
            }
          }
        },
        "Code": {
          "S3Bucket": {
            "Ref": "deploymentBucketName"
          },
          "S3Key": {
            "Ref": "s3Key"
          }
        }
      }
    },
    "BeauzeadPostConfirmationFunctionPermission": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "FunctionName": {
          "Ref": "BeauzeadPostConfirmationFunction"
        },
        "Action": "lambda:InvokeFunction",
        "Principal": "cognito-idp.amazonaws.com",
        "SourceArn": {
          "Fn::Sub": "arn:aws:cognito-idp:${AWS::Region}:${AWS::AccountId}:userpool/${userPoolId}"
        }
      }
    }
  },
  "Outputs": {
    "LambdaFunctionArn": {
      "Description": "ARN of the Lambda function",
      "Value": {
        "Fn::GetAtt": [
          "BeauzeadPostConfirmationFunction",
          "Arn"
        ]
      }
    },
    "LambdaFunctionName": {
      "Description": "Name of the Lambda function",
      "Value": {
        "Ref": "BeauzeadPostConfirmationFunction"
      }
    },
    "LambdaExecutionRoleArn": {
      "Value": {
        "Fn::GetAtt": [
          "LambdaExecutionRole",
          "Arn"
        ]
      }
    }
  }
}